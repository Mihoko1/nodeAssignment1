<%- include header %>


<div class="profMessage"><%= message %></div>

<div class=profileContainer>

    <div class="mb-3 profileBox">
      <div class="row card-border">
        <div class="col-md-4">
            <div class="profImageBox">
                <% if ( data[0].prof_pic_path != null ){ %><img src="<%= data[0].prof_pic_path %>" alt="profile pictuer" ><% } else { %><img src= "../img/default-profile.jpg" alt="profile picture" ><% } %>
            </div>
            
        </div>
        <div class="col-md-8">
            <div class="card-body">

                
                <h3 class="nameContainer"> <%=data[0].first_name%>
                </h3>
                <h3 class="nameContainer">
                    <%=data[0].last_name%>
                </h3>
            
                <div class="card-text">
                <table class="table table-user-information">
                    <tbody>
                      <tr>
                            <td>User Name:</td>
                            <td><%=data[0].user_name%></td>
                      </tr>
                      <tr>
                        <td>Mobile:</td>
                        <td><%=data[0].mob_no%></td>
                      </tr>
                    </tbody>
                </table>
                </div>
                

                </div>
            </div>
            <div class="formContainer">
                <div class="row">
                    <div class="col-md-12">
                        <form class="uploadForm" action="/profile" method="POST" encType="multipart/form-data">

                            <input type="file"
                               id="avatar" name="avatar"
                               accept="image/png, image/jpeg">

                            <div class="uploadBtns">
                                <input class="btn btn-info mr-3" type="submit" value="Update">
                                <a class="btn btn-info" href="/feed">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
          </div>
    </div>
</div>



 <%- include footer %>