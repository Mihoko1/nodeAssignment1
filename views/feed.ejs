<% include header.ejs %>
   
<div class="feed-container">
    <div class="box">
	<div class="mainbox">
            
            <% if (feedData.length > 0){ 
                for (var i = 0; i < feedData.length; i++) { %>
            
                <div class="card mb-3">      

                    <% if(feedData[i].feed_img){ 

                        var buf = new Buffer(feedData[i].feed_img, "binary");

                        var buffer = buf.toString('base64');

                    };%>

                        <img src="data:image/png;base64,<%= buffer %>" class="card-img-top " >
                    
                        <div class="card-body">
                        <div class="nameContainer">
                             <div class="card-title name"><%= feedData[i].first_name %></div> <div class="card-title nameContainer"><%= feedData[i].last_name %>
                            </div>
                        </div>
                            
                            <p class="card-text"><%=feedData[i].feed_text %></p>
                            <p class="card-text"><small class="text-muted"><%= feedData[i].feed_date %></small>
                            </p>
                        </div>
                    </div>
                
                <% }; 
            }; %>
	   </div>
 
        <div class="sidebar">

            <div class="feedProfile"><a class="linkToDashboard" href="/dashboard"><% 
              if ( data[0].prof_pic_path != null ){ %><img src="<%= data[0].prof_pic_path %>" alt="profile pictuer"><% } else { %><img src= "../img/default-profile.jpg" alt="profile picture"><% } %></a>
            </div>
            <div>
                <p><%= data[0].first_name %></p><p><%= data[0].last_name %></p>
            </div>
       </div>
    </div>
    
    
    
        
    
