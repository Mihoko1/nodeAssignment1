<html lang="en">
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
    <meta charset="UTF-8">
    <title>Node.js Assignment - SNS </title>
    
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   
</head>
<body>
    
     
    <div class="loginContainer mt-5">  
        
        <div id="loginbox container"> 
            <div class="row">
                <div class="col-8 col-lg-6 mx-auto">
                    <div class="logo mt-5 mb-5">
                        <h2 class="text-dark text-center font-weight-bold center-block">FAKEBOOK</h2>
                    </div>  
                    <div class="card border border-info shadow-sm bg-white rounded" >
                         <div class="card-header text-white bg-info">
                            <div class="card-title"><h3>Log In</h3></div>
                        
                        </div>    
 
                        <div class="card-body" >
                            <% if (message.length > 0) { %>
                                <div class="alert alert-danger col-sm-12"><%= message %></div>
                            <% } %>

                            <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">

                                <div class="input-group mt-3 mb-3">

                                    <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="username">                                       
                                </div>

                                <div style="margin-bottom: 25px" class="input-group">

                                    <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                                </div>

                                    <div style="margin-top:10px" class="form-group">
                                        <!-- Button -->

                                        <div class="col-sm-12 controls">
                                          <button id="btn-login" type="submit" class="btn btn-info pr-5 pl-5">Login</button>


                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-12 control">
                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                                Don't have an account!
                                            <a href="/signup">
                                                Sign Up Here
                                            </a>
                                            </div>
                                        </div>
                                    </div>   
                                </form>    
                            </div>                    
                        </div> 
                    </div>
            </div>
        </div>
       
    </div>
</body>
</html>
